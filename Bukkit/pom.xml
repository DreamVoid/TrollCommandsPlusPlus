<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>ninja.egg82.plugins</groupId>
  <artifactId>TrollCommandsPlusPlus-Bukkit</artifactId>
  <version>6.28.53</version>
  <name>TrollCommandsPlusPlus-Bukkit</name>
  <build>
    <sourceDirectory>src</sourceDirectory>
    <plugins>
      <plugin>
        <artifactId>maven-compiler-plugin</artifactId>
        <version>3.7.0</version>
        <configuration>
          <source>1.8</source>
          <target>1.8</target>
          <artifactSet>
            <includes>
              <include>org.bstats:*</include>
            </includes>
          </artifactSet>
        </configuration>
      </plugin>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-shade-plugin</artifactId>
        <version>3.0.0</version>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
            <configuration>
              <transformers>
                <transformer implementation="org.apache.maven.plugins.shade.resource.ServicesResourceTransformer" />
              </transformers>
              <filters>
                <filter>
                  <artifact>*:*</artifact>
                  <excludes>
                    <exclude>META-INF/*.SF</exclude>
                    <exclude>META-INF/*.DSA</exclude>
                    <exclude>META-INF/*.RSA</exclude>
                    <exclude>**/*.html</exclude>
                    <exclude>**/*.txt</exclude>
                  </excludes>
                </filter>
                <filter>
                  <artifact>ninja.egg82.lib:plugin-lib</artifact>
                  <includes>
                    <include>ninja/egg82/**</include>
                  </includes>
                </filter>
                <filter>
                  <artifact>ninja.egg82.lib:disguise-lib</artifact>
                  <includes>
                    <include>ninja/egg82/disguise/**</include>
                  </includes>
                </filter>
                <filter>
                  <artifact>ninja.egg82.lib:nbt-lib</artifact>
                  <includes>
                    <include>ninja/egg82/nbt/**</include>
                  </includes>
                </filter>
                <filter>
                  <artifact>ninja.egg82.lib:protocol-lib</artifact>
                  <includes>
                    <include>ninja/egg82/protocol/**</include>
                  </includes>
                </filter>
              </filters>
              <minimizeJar>true</minimizeJar>
              <relocations>
                <relocation>
                  <pattern>ninja.egg82</pattern>
                  <shadedPattern>me.egg82.tcpp.lib.ninja.egg82</shadedPattern>
                </relocation>
                <relocation>
                  <pattern>org.bstats</pattern>
                  <shadedPattern>me.egg82.tcpp.lib.org.bstats</shadedPattern>
                </relocation>
                <relocation>
                  <pattern>net.gravitydevelopment</pattern>
                  <shadedPattern>me.egg82.tcpp.lib.net.gravitydevelopment</shadedPattern>
                </relocation>
                <relocation>
                  <pattern>opennlp</pattern>
                  <shadedPattern>me.egg82.tcpp.lib.opennlp</shadedPattern>
                </relocation>
              </relocations>
            </configuration>
          </execution>
        </executions>
      </plugin>
