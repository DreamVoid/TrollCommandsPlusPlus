    <dependency>
       <groupId>LibsDisguises</groupId>
       <artifactId>LibsDisguises</artifactId>
       <version>9.0.6-SNAPSHOT</version>
       <scope>provided</scope>
    </dependency>
  </dependencies>
  <url>https://egg82.ninja</url>
  <groupId>ninja.egg82.plugins</groupId>
</project>